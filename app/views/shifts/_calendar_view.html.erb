<div id="calendar">
  <div class = "container">
    <%= month_calendar events: @shifts do |date, shifts| %>
      <%= date.day %>

      <% shifts.each do |shift| %>
        <div>
          <%= link_to "#{shift.location}", shift_path(shift) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
